<!DOCTYPE html>
<html>
  <head>
    <title>Srenvio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  </head>
  <body>








<!-- Nav  -->
<table class="navbar"><tr> 

  <td><ul class="logo"><%= link_to image_tag('logow.svg'), root_path %> </ul></td>

  <td align="right">

     

  

      <% if current_user %> 
      <% if current_user.admin == true %>  
      <%= link_to "ADMINISTRACION", users_path , class:'btn '%>
      <% end %>

        <div class="dropdown">
      <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">DOCUMENTOS
      <span class="caret"></span></button>
      <ul class="dropdown-menu">
      <li><%= link_to "Reglamento", "/reglamento_srenvio.pdf", target: :_blank  %></li>
      <li><%= link_to "", '' %> </li>
      </ul>
      </div>

   
      <div class="dropdown">
      <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">COMEDOR
      <span class="caret"></span></button>
      <ul class="dropdown-menu">
      <li><%= link_to "Solicitar", dinning_frequest_path %> </li>
      <li><%= link_to "Menú", '' %> </li>
      </ul>
      </div>

      Bienvenid@   <%= current_user.name.split.first %>!
      <div class="btn-group dropleft">
      <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
      <span class="caret"></span></button>
      <ul class="dropdown-menu pull-right">
      <li><%= link_to "Cambiar Contraseña", usersettings_passwordchange_path %> </li>
      <li><%= link_to "Salir", logout_path %> </li>
      </ul>
      </div>
  
  

  
      <% else %>
      <%= link_to "REGISTRATE", new_user_path , class:'btn'%> 
      <%= link_to "INICIA SESION", login_path , class:'btn' %>
      <% end %>
  
</td></tr> </table>
  



<!-- Alerts  -->
<% flash.each do |name, msg| %>
<div align="center">
<div class='alert alert-<%= name %>'>
<%= msg %>
</div>
<% end %>
</div>


    <%= yield %>
  


  

</html>

